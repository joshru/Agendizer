<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <children>
      <HBox nodeOrientation="LEFT_TO_RIGHT" prefHeight="0.0" prefWidth="600.0">
         <children>
            <ImageView fitHeight="28.0" fitWidth="184.0">
               <image>
                  <Image url="@res/logo.png" />
               </image>
            </ImageView>
            <HBox prefHeight="34.0" prefWidth="51.0" />
            <Button fx:id="searchButton" mnemonicParsing="false" onMouseClicked="#test" text="Search" />
            <TextField prefHeight="25.0" prefWidth="297.0" promptText="Search for a task" HBox.hgrow="SOMETIMES" />
         </children>
         <opaqueInsets>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </opaqueInsets>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </HBox>
      <TabPane prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <Tab text="Upcoming Tasks">
               <content>
                  <VBox>
                     <children>
                        <Button fx:id="upNewTaskButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="25.0" prefWidth="907.0" text="+ New Task +" VBox.vgrow="ALWAYS" />
                        <VBox VBox.vgrow="ALWAYS">
                           <children>
                              <TableView VBox.vgrow="ALWAYS">
                                <columns>
                                  <TableColumn prefWidth="75.0" sortType="DESCENDING" text="Task" />
                                  <TableColumn prefWidth="75.0" sortType="DESCENDING" text="Complete By" />
                                    <TableColumn prefWidth="75.0" sortType="DESCENDING" text="Difficulty" />
                                    <TableColumn prefWidth="75.0" sortType="DESCENDING" text="Urgency" />
                                    <TableColumn prefWidth="75.0" sortType="DESCENDING" text="Priority" />
                                </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </content></Tab>
          <Tab text="Completed Tasks">
               <content>
                  <VBox>
                     <children>
                        <Button fx:id="compNewTaskButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="25.0" prefWidth="907.0" text="+ New Task +" VBox.vgrow="ALWAYS" />
                        <VBox VBox.vgrow="ALWAYS">
                           <children>
                              <TableView VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn prefWidth="75.0" sortType="DESCENDING" text="Task" />
                                    <TableColumn prefWidth="75.0" sortType="DESCENDING" text="Date Completed" />
                                    <TableColumn prefWidth="75.0" sortType="DESCENDING" text="Difficulty" />
                                    <TableColumn prefWidth="75.0" sortType="DESCENDING" text="Urgency" />
                                    <TableColumn prefWidth="75.0" sortType="DESCENDING" text="Priority" />
                                </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </content></Tab>
            <Tab text="New Task">
               <content>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label prefHeight="27.0" prefWidth="100.0" text="Task Name:">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <TextField promptText="Task Name" />
                        <HBox prefHeight="18.0" prefWidth="610.0" />
                        <Label text="Deadline:">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <DatePicker prefHeight="25.0" prefWidth="619.0" promptText="Deadline Date" VBox.vgrow="ALWAYS" />
                        <HBox prefHeight="18.0" prefWidth="610.0" />
                        <Label text="Difficulty:">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <ChoiceBox prefHeight="25.0" prefWidth="737.0" VBox.vgrow="ALWAYS" />
                        <HBox prefHeight="18.0" prefWidth="610.0" />
                        <Label text="Urgency:">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <ChoiceBox prefHeight="25.0" prefWidth="737.0" VBox.vgrow="ALWAYS" />
                        <HBox prefHeight="18.0" prefWidth="610.0" />
                        <Label text="Priority:">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                        <ChoiceBox prefHeight="25.0" prefWidth="737.0" VBox.vgrow="ALWAYS" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>
